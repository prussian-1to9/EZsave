{
  "ts-node": {
    // [필수] require 미설정시 오류 발생 (node20)
    "require": ["tsconfig-paths/register", "typescript-transform-paths"]
  },
  "compilerOptions": {
    "baseUrl": "./", // baseUrl에 설정한 경로대로 절대경로 지정 : project 파일 root 경로
    "paths": {
      // alias : 실제 경로 매핑
      "@/*": ["src/*"],
      "@config/*": ["src/config/*"],
      "@routes/*": ["src/routes/*"]
    },
    "plugins": [{ "transform": "typescript-transform-paths" }]
  }
}
